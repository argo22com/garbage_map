{
  "name": "garbage_map",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn install && yarn build:css && vite",
    "prebuild": "yarn build:css-optimized",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "build:css": "tailwind build -i src/assets/styles/index.css -o src/assets/styles/tailwind.css",
    "build:css-optimized": "PURGE_CSS=true yarn build:css",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "leaflet": "1.7.1",
    "leaflet.markercluster": "1.5.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-leaflet": "3.2.1"
  },
  "devDependencies": {
    "@babel/core": "7.15.0",
    "@babel/preset-env": "7.15.0",
    "@babel/preset-typescript": "7.15.0",
    "@ehutch79/vite-eslint": "0.0.1",
    "@rollup/plugin-eslint": "8.0.1",
    "@testing-library/jest-dom": "5.14.1",
    "@types/classnames": "2.3.1",
    "@types/jest": "27.0.1",
    "@types/leaflet": "1.7.4",
    "@types/leaflet.markercluster": "1.4.5",
    "@types/react": "17.0.18",
    "@types/react-dom": "17.0.9",
    "@typescript-eslint/eslint-plugin": "4.29.2",
    "@typescript-eslint/parser": "4.29.2",
    "@vitejs/plugin-react-refresh": "1.3.6",
    "autoprefixer": "10.3.1",
    "babel-jest": "27.0.6",
    "classnames": "2.3.1",
    "eslint": "7.32.0",
    "eslint-plugin-react": "7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "7.0.1",
    "jest": "27.0.6",
    "lint-staged": "11.1.2",
    "prettier": "2.3.2",
    "tailwindcss": "2.2.7",
    "typescript": "4.3.5",
    "vite": "2.5.0",
    "vite-plugin-svgr": "0.4.0",
    "vite-tsconfig-paths": "3.3.13"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
