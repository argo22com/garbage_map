{
  "name": "garbage_map",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^2.1.0",
    "@testing-library/jest-dom": "^5.3.0",
    "@testing-library/react": "^10.0.2",
    "@testing-library/user-event": "^10.0.1",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.0",
    "@types/react": "^16.9.32",
    "@types/react-dom": "^16.9.6",
    "@types/react-leaflet": "^2.5.1",
    "@types/react-leaflet-markercluster": "^2.0.0",
    "autoprefixer": "^9.7.5",
    "leaflet": "^1.6.0",
    "leaflet.markercluster": "^1.4.1",
    "postcss-cli": "^7.1.0",
    "prop-types": "^15.7.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-leaflet": "^2.6.3",
    "react-leaflet-markercluster": "https://github.com/olabalboa/react-leaflet-markercluster",
    "react-scripts": "3.4.1",
    "typescript": "~3.8.3"
  },
  "scripts": {
    "start": "yarn install && yarn build:css && react-scripts start",
    "build": "yarn build:css-optimized && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "tailwind build src/assets/styles/index.css -o src/assets/styles/tailwind.css",
    "build:css-optimized": "postcss src/assets/styles/index.css -o src/assets/styles/tailwind.css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/classnames": "^2.2.10",
    "classnames": "^2.2.6",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "^1.19.1",
    "tailwindcss": "^1.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
