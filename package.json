{
  "name": "garbage_map",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "yarn install && yarn build:css && vite",
    "prebuild": "yarn build:css-optimized",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "build:css": "tailwind build src/assets/styles/index.css -o src/assets/styles/tailwind.css",
    "build:css-optimized": "PURGE_CSS=true yarn build:css",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "leaflet": "1.7.1",
    "leaflet.markercluster": "1.5.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-leaflet": "3.1.0"
  },
  "devDependencies": {
    "@babel/core": "7.14.0",
    "@babel/preset-env": "7.14.0",
    "@babel/preset-typescript": "7.13.0",
    "@ehutch79/vite-eslint": "0.0.1",
    "@rollup/plugin-eslint": "8.0.1",
    "@testing-library/jest-dom": "5.12.0",
    "@types/classnames": "2.3.0",
    "@types/jest": "26.0.22",
    "@types/leaflet": "1.7.0",
    "@types/leaflet.markercluster": "1.4.4",
    "@types/react": "17.0.3",
    "@types/react-dom": "17.0.3",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "@vitejs/plugin-react-refresh": "1.3.2",
    "autoprefixer": "10.2.5",
    "babel-jest": "26.6.3",
    "classnames": "2.3.1",
    "eslint": "7.23.0",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "husky": "5.2.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "tailwindcss": "2.1.2",
    "typescript": "4.2.3",
    "vite": "2.1.5",
    "vite-plugin-svgr": "0.2.0",
    "vite-tsconfig-paths": "2.5.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
