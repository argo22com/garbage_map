{
  "name": "garbage_map",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "leaflet": "1.7.1",
    "leaflet.markercluster": "1.4.1",
    "react": "16.14.0",
    "react-dom": "16.14.0",
    "react-leaflet": "3.0.2",
    "react-scripts": "4.0.0"
  },
  "scripts": {
    "start": "yarn install && yarn build:css && FAST_REFRESH=true react-scripts start",
    "build": "yarn build:css-optimized && react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "build:css": "tailwind build src/assets/styles/index.css -o src/assets/styles/tailwind.css",
    "build:css-optimized": "PURGE_CSS=true yarn build:css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.11.9",
    "@testing-library/react": "11.1.2",
    "@testing-library/user-event": "12.2.0",
    "@types/classnames": "2.2.11",
    "@types/jest": "26.0.15",
    "@types/leaflet.markercluster": "1.4.3",
    "@types/node": "14.14.6",
    "@types/react": "16.9.56",
    "@types/react-dom": "16.9.9",
    "autoprefixer": "10.0.4",
    "classnames": "2.2.6",
    "husky": "4.3.0",
    "lint-staged": "10.5.1",
    "prettier": "2.1.2",
    "tailwindcss": "1.9.6",
    "typescript": "4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
